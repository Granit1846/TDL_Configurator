<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- General -->
    <sys:String x:Key="STR_App_Settings" xmlns:sys="clr-namespace:System;assembly=mscorlib">Настройки</sys:String>
    <sys:String x:Key="STR_Settings_Title" xmlns:sys="clr-namespace:System;assembly=mscorlib">Настройки</sys:String>
    <sys:String x:Key="STR_Settings_PreviewHint" xmlns:sys="clr-namespace:System;assembly=mscorlib">Превью: тема/язык применяются сразу. Сохранить — фиксирует изменения.</sys:String>

    <!-- Settings: Paths -->
    <sys:String x:Key="STR_Settings_GamePath_Label" xmlns:sys="clr-namespace:System;assembly=mscorlib">Путь к игре (корень Skyrim Special Edition)</sys:String>
    <sys:String x:Key="STR_Settings_GamePath_Hint" xmlns:sys="clr-namespace:System;assembly=mscorlib">Пример: F:\SteamLibrary\steamapps\common\Skyrim Special Edition</sys:String>
    <sys:String x:Key="STR_Settings_Browse" xmlns:sys="clr-namespace:System;assembly=mscorlib">Выбрать...</sys:String>

    <!-- Settings: Theme -->
    <sys:String x:Key="STR_Settings_Theme_Label" xmlns:sys="clr-namespace:System;assembly=mscorlib">Тема</sys:String>
    <sys:String x:Key="STR_Settings_Theme_Light" xmlns:sys="clr-namespace:System;assembly=mscorlib">Светлая (по умолчанию)</sys:String>
    <sys:String x:Key="STR_Settings_Theme_Dark" xmlns:sys="clr-namespace:System;assembly=mscorlib">Тёмная (по умолчанию)</sys:String>
    <sys:String x:Key="STR_Settings_Theme_Nexus" xmlns:sys="clr-namespace:System;assembly=mscorlib">Nexus‑style</sys:String>

    <!-- Settings: Language -->
    <sys:String x:Key="STR_Settings_Language_Label" xmlns:sys="clr-namespace:System;assembly=mscorlib">Язык</sys:String>
    <sys:String x:Key="STR_Settings_Language_Ru" xmlns:sys="clr-namespace:System;assembly=mscorlib">Русский</sys:String>
    <sys:String x:Key="STR_Settings_Language_En" xmlns:sys="clr-namespace:System;assembly=mscorlib">English</sys:String>

    <!-- Settings: Updates -->
    <sys:String x:Key="STR_Settings_Updates_Label" xmlns:sys="clr-namespace:System;assembly=mscorlib">Обновления</sys:String>
    <sys:String x:Key="STR_Settings_CheckUpdates" xmlns:sys="clr-namespace:System;assembly=mscorlib">Проверить обновления</sys:String>
    <sys:String x:Key="STR_Settings_UpdatePlaceholder" xmlns:sys="clr-namespace:System;assembly=mscorlib">(пока без URL)</sys:String>

    <!-- Buttons -->
    <sys:String x:Key="STR_Settings_Save" xmlns:sys="clr-namespace:System;assembly=mscorlib">Сохранить</sys:String>
    <sys:String x:Key="STR_Settings_Cancel" xmlns:sys="clr-namespace:System;assembly=mscorlib">Отмена</sys:String>

    <!-- Links tooltips -->
    <sys:String x:Key="STR_Link_Nexus" xmlns:sys="clr-namespace:System;assembly=mscorlib">Nexus</sys:String>
    <sys:String x:Key="STR_Link_GitHub" xmlns:sys="clr-namespace:System;assembly=mscorlib">GitHub</sys:String>
    <sys:String x:Key="STR_Link_Donation" xmlns:sys="clr-namespace:System;assembly=mscorlib">Donation</sys:String>
    <sys:String x:Key="STR_Link_Discord" xmlns:sys="clr-namespace:System;assembly=mscorlib">Discord</sys:String>

    <!-- Messages -->
    <sys:String x:Key="STR_Msg_SelectExistingFolder" xmlns:sys="clr-namespace:System;assembly=mscorlib">Укажите существующую папку игры.</sys:String>
    <sys:String x:Key="STR_Msg_Settings" xmlns:sys="clr-namespace:System;assembly=mscorlib">Настройки</sys:String>
    <sys:String x:Key="STR_Msg_LinkNotSet" xmlns:sys="clr-namespace:System;assembly=mscorlib">Ссылка пока не задана.</sys:String>
    <sys:String x:Key="STR_Msg_UpdateUrlNotSet" xmlns:sys="clr-namespace:System;assembly=mscorlib">URL для проверки обновлений пока не задан.</sys:String>

</ResourceDictionary>
