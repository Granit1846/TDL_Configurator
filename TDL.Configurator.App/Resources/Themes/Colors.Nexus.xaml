<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Nexus-style (dark, Vortex-like, slightly different tones) -->
    <SolidColorBrush x:Key="TDL.Brush.WindowBackground" Color="#FF14171D"/>
    <SolidColorBrush x:Key="TDL.Brush.PanelBackground" Color="#FF1C212A"/>
    <SolidColorBrush x:Key="TDL.Brush.HeaderBackground" Color="#FF111418"/>
    <SolidColorBrush x:Key="TDL.Brush.SidebarBackground" Color="#FF151A22"/>

    <SolidColorBrush x:Key="TDL.Brush.Text" Color="#FFE8EAF0"/>
    <SolidColorBrush x:Key="TDL.Brush.TextDim" Color="#FFB7BDC8"/>

    <SolidColorBrush x:Key="TDL.Brush.Border" Color="#33000000"/>
    <SolidColorBrush x:Key="TDL.Brush.ControlBorder" Color="#552B323F"/>

    <SolidColorBrush x:Key="TDL.Brush.ControlBackground" Color="#FF232A35"/>
    <SolidColorBrush x:Key="TDL.Brush.ControlBackgroundHover" Color="#FF2A3240"/>
    <SolidColorBrush x:Key="TDL.Brush.ControlBackgroundPressed" Color="#FF313B4B"/>

    <SolidColorBrush x:Key="TDL.Brush.Accent" Color="#FFE57C20"/>
    <SolidColorBrush x:Key="TDL.Brush.AccentHover" Color="#FFF08A2C"/>
    <SolidColorBrush x:Key="TDL.Brush.AccentPressed" Color="#FFCC6A18"/>
    <SolidColorBrush x:Key="TDL.Brush.AccentText" Color="#FF111111"/>

    <SolidColorBrush x:Key="TDL.Brush.Hover" Color="#221F2936"/>
    <SolidColorBrush x:Key="TDL.Brush.HoverPressed" Color="#33233140"/>
    <SolidColorBrush x:Key="TDL.Brush.Selection" Color="#22E57C20"/>

</ResourceDictionary>
