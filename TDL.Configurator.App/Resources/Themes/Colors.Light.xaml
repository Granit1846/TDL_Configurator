<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light (default) -->
    <SolidColorBrush x:Key="TDL.Brush.WindowBackground" Color="#FFF2F2F2"/>
    <SolidColorBrush x:Key="TDL.Brush.PanelBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TDL.Brush.HeaderBackground" Color="#FFF7F7F7"/>
    <SolidColorBrush x:Key="TDL.Brush.SidebarBackground" Color="#FFF9F9F9"/>

    <SolidColorBrush x:Key="TDL.Brush.Text" Color="#FF111111"/>
    <SolidColorBrush x:Key="TDL.Brush.TextDim" Color="#FF666666"/>

    <SolidColorBrush x:Key="TDL.Brush.Border" Color="#22000000"/>
    <SolidColorBrush x:Key="TDL.Brush.ControlBorder" Color="#FFCCCCCC"/>

    <SolidColorBrush x:Key="TDL.Brush.ControlBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TDL.Brush.ControlBackgroundHover" Color="#FFF2F2F2"/>
    <SolidColorBrush x:Key="TDL.Brush.ControlBackgroundPressed" Color="#FFE8E8E8"/>

    <SolidColorBrush x:Key="TDL.Brush.Accent" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="TDL.Brush.AccentHover" Color="#FF106EBE"/>
    <SolidColorBrush x:Key="TDL.Brush.AccentPressed" Color="#FF005A9E"/>
    <SolidColorBrush x:Key="TDL.Brush.AccentText" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="TDL.Brush.Hover" Color="#0A000000"/>
    <SolidColorBrush x:Key="TDL.Brush.HoverPressed" Color="#14000000"/>
    <SolidColorBrush x:Key="TDL.Brush.Selection" Color="#140078D4"/>

</ResourceDictionary>
