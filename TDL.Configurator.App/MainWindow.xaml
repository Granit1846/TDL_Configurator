<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="TDL.Configurator.App.MainWindow"
        Title="TDL Configurator" Width="1100" Height="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="{DynamicResource TDL.Brush.Border}" BorderThickness="0,0,0,1"
                Background="{DynamicResource TDL.Brush.HeaderBackground}">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="TDL Configurator" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="External settings UI (INI)" Opacity="0.7" FontSize="12"/>
                </StackPanel>

                <Button Grid.Column="1" Width="140" Height="32"
                        VerticalAlignment="Center"
                        Content="{DynamicResource STR_App_Settings}"
                        Click="OnSettingsClick"/>
            </Grid>
        </Border>

        <!-- Main -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource TDL.Brush.Border}" BorderThickness="0,0,1,0"
                    Background="{DynamicResource TDL.Brush.SidebarBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Логотип прямо над вкладками -->
                    <Border Grid.Row="0" BorderBrush="{DynamicResource TDL.Brush.Border}" BorderThickness="0,0,0,1" Padding="10">
                        <Image Source="/Assets/logo3.png"
                               Height="144"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" Width="144"/>
                    </Border>

                    <!-- Вкладки -->
                    <ListBox Grid.Row="1"
                         x:Name="NavList"
                         Margin="8"
                         SelectionChanged="NavList_SelectionChanged"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBoxItem Content="Chaos" Height="30"/>
                        <ListBoxItem Content="Inventory" Height="30"/>
                        <ListBoxItem Content="Wrath" Height="30"/>
                        <ListBoxItem Content="Hunter" Height="30"/>
                        <ListBoxItem Content="Gigant" Height="30"/>
                        <ListBoxItem Content="Comedy" Height="30"/>
                        <ListBoxItem Content="Documentation" Height="30"/>
                        <ListBoxItem Content="Quick access" Height="30"/>
                        <ListBoxItem Content="Test" Height="30"/>
                    </ListBox>
                </Grid>
            </Border>


            <!-- Content -->
            <Border Grid.Column="1" Padding="16" Background="{DynamicResource TDL.Brush.PanelBackground}">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </Grid>
</Window>
