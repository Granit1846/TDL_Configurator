<UserControl x:Class="TDL.Configurator.App.Pages.HunterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="NumericBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Content" Value="↺"/>
        </Style>

        <Style x:Key="RowLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <TextBlock Text="Hunter" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Настройки секции [Hunter] в TDL_StreamPlugin.ini"
                       Opacity="0.7" Margin="0,6,0,16"/>

            <WrapPanel Margin="0,0,0,12" VerticalAlignment="Center">
                <Button Content="Сохранить + применить" Width="170" Margin="0,0,8,0" Click="SaveApply_Click"/>
                <Button Content="Сбросить всё" Width="130" Margin="0,0,12,0" Click="DefaultsAll_Click"/>
                <TextBlock x:Name="HunterStatusText" Opacity="0.7" VerticalAlignment="Center"/>
            </WrapPanel>

            <GroupBox Header="Параметры">
                <Grid Margin="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="340"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- CorpseTime -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                               Text="Время исчезновения трупа (сек)"
                               ToolTip="Сколько секунд труп охотника остаётся после смерти. 0 — исчезает сразу."/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="CorpseTimeBox"
                             Style="{StaticResource NumericBoxStyle}"/>
                    <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                            Tag="CorpseTime" ToolTip="Сбросить на Default (30)" Click="DefaultRow_Click"/>

                    <!-- Duration -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                               Text="Длительность эффекта (сек)"
                               ToolTip="Длительность активности события/эффекта «Hunter» (в секундах)."/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="DurationBox"
                             Style="{StaticResource NumericBoxStyle}"/>
                    <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                            Tag="Duration" ToolTip="Сбросить на Default (90)" Click="DefaultRow_Click"/>

                    <!-- MaxDistance -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                               Text="Макс. дистанция (units)"
                               ToolTip="Максимальная дистанция, на которой логика «Hunter» может искать/поддерживать цель."/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="MaxDistanceBox"
                             Style="{StaticResource NumericBoxStyle}"/>
                    <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                            Tag="MaxDistance" ToolTip="Сбросить на Default (5500)" Click="DefaultRow_Click"/>

                    <!-- ReAggro -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                               Text="Интервал повторной агрессии (сек)"
                               ToolTip="Как часто «Hunter» обновляет цель/повторно «цепляется» за игрока."/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="ReAggroBox"
                             Style="{StaticResource NumericBoxStyle}"/>
                    <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                            Tag="ReAggro" ToolTip="Сбросить на Default (4.0)" Click="DefaultRow_Click"/>

                    <!-- SpawnOffset -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                               Text="Смещение спавна (units)">
                        <TextBlock.ToolTip>
                            <ToolTip MaxWidth="520">
                                <TextBlock TextWrapping="Wrap">
                                    <Run Text="Дистанция, на которой спавнится «Hunter» относительно игрока. "/>
                                    <Run Text="ВНИМАНИЕ!" Foreground="Red" FontWeight="Bold"/>
                                    <Run Text=" Слишком малое значение может приводить к появлению почти вплотную и визуальным артефактам."
                                         Foreground="Red"/>
                                </TextBlock>
                            </ToolTip>
                        </TextBlock.ToolTip>
                    </TextBlock>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="SpawnOffsetBox"
                             Style="{StaticResource NumericBoxStyle}"/>
                    <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                            Tag="SpawnOffset" ToolTip="Сбросить на Default (1200)" Click="DefaultRow_Click"/>
                </Grid>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
