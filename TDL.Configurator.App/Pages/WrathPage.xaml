<UserControl x:Class="TDL.Configurator.App.Pages.WrathPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="NumericBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Content" Value="↺"/>
        </Style>

        <Style x:Key="RowLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <TextBlock Text="Wrath" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Настройки секции [Wrath] в TDL_StreamPlugin.ini"
                       Opacity="0.7" Margin="0,6,0,16"/>

            <WrapPanel Margin="0,0,0,12" VerticalAlignment="Center">
                <Button Content="Загрузить" Width="120" Margin="0,0,8,0" Click="Load_Click"/>
                <Button Content="Сохранить" Width="120" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Сбросить всё" Width="130" Margin="0,0,12,0" Click="DefaultsAll_Click"/>
                <TextBlock x:Name="StatusText" Opacity="0.7" VerticalAlignment="Center"/>
            </WrapPanel>

            <GroupBox Header="Параметры">
                <StackPanel Margin="10">

                    <!-- BASIC -->
                    <Expander Header="ОСНОВНОЕ" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Количество бурстов"
                                       ToolTip="Диапазон: 1–50. Default: 6."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="TotalBurstsBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="TotalBursts" ToolTip="Сбросить на Default (6)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Интервал (сек)"
                                       ToolTip="Пауза между бурстами (сек). Диапазон: 0.05–2.0. Default: 0.4."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="IntervalBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="Interval" ToolTip="Сбросить на Default (0.4)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Радиус (units)"
                                       ToolTip="Радиус действия эффекта (units). Диапазон: 100–2000. Default: 300."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="RadiusBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="Radius" ToolTip="Сбросить на Default (300)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Смещение по Z (units)"
                                       ToolTip="Смещение центра эффекта по оси Z (units). Диапазон: 0–500. Default: 50."/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="ZOffsetBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ZOffset" ToolTip="Сбросить на Default (50)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <!-- DAMAGE -->
                    <Expander Header="УРОН И МУЛЬТИПЛИКАТОРЫ" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Мин. урон"
                                       ToolTip="Минимальный урон. Диапазон: 1–100. Default: 5."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="DamageMinBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="DamageMin" ToolTip="Сбросить на Default (5)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Макс. урон"
                                       ToolTip="Максимальный урон. Диапазон: 1–100. Default: 15."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="DamageMaxBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="DamageMax" ToolTip="Сбросить на Default (15)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Множитель огня"
                                       ToolTip="Диапазон: 0.0–5.0. Default: 1.0."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="FireMultBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FireMult" ToolTip="Сбросить на Default (1.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Множитель магии (шторм)"
                                       ToolTip="Диапазон: 0.0–5.0. Default: 1.0."/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="StormMagBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="StormMag" ToolTip="Сбросить на Default (1.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Множитель стамины (мороз)"
                                       ToolTip="Диапазон: 0.0–5.0. Default: 1.0."/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="FrostStaBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FrostSta" ToolTip="Сбросить на Default (1.0)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <!-- LEVEL -->
                    <Expander Header="СКЕЙЛИНГ" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Скейл от уровня"
                                       ToolTip="Множитель скейла (на уровень). Диапазон: 0.0–0.10. Default: 0.0."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="LevelScaleBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="LevelScale" ToolTip="Сбросить на Default (0.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Предел скейла"
                                       ToolTip="Максимальный множитель от уровня. Диапазон: 1.0–5.0. Default: 3.0."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="LevelCapBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="LevelCap" ToolTip="Сбросить на Default (3.0)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <!-- SHAKE -->
                    <Expander Header="ТРЯСКА КАМЕРЫ" IsExpanded="True">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Шанс тряски (%)"
                                       ToolTip="Диапазон: 0–100. Default: 0."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="ShakeChanceBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ShakeChance" ToolTip="Сбросить на Default (0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Длительность тряски (сек)"
                                       ToolTip="Диапазон: 0.0–1.0. Default: 0.0."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="ShakeDurationBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ShakeDuration" ToolTip="Сбросить на Default (0.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Сила тряски"
                                       ToolTip="Диапазон: 0.0–1.0. Default: 0.0."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="ShakeStrengthBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ShakeStrength" ToolTip="Сбросить на Default (0.0)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
