<UserControl x:Class="TDL.Configurator.App.Pages.WrathPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="NumericBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Content" Value="↺"/>
        </Style>

        <Style x:Key="RowLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <TextBlock Text="Wrath" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Настройки секции [Wrath] в TDL_StreamPlugin.ini"
                       Opacity="0.7" Margin="0,6,0,16"/>

            <WrapPanel Margin="0,0,0,12" VerticalAlignment="Center">
                <Button Content="Загрузить" Width="120" Margin="0,0,8,0" Click="Load_Click"/>
                <Button Content="Сохранить" Width="120" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Сбросить всё" Width="130" Margin="0,0,12,0" Click="DefaultsAll_Click"/>
                <TextBlock x:Name="WrathStatusText" Opacity="0.7" VerticalAlignment="Center"/>
            </WrapPanel>

            <GroupBox Header="Параметры">
                <StackPanel Margin="10">

                    <Expander Header="ВЗРЫВЫ И ЗОНА" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Количество вспышек"
                                       ToolTip="WrathTotalBursts. Диапазон: 1..500. Default: 24."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="WrathTotalBurstsBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathTotalBursts" ToolTip="Сбросить на Default (24)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Интервал"
                                       ToolTip="WrathInterval. Диапазон: 0.01..1.00. Default: 0.10."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="WrathIntervalBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathInterval" ToolTip="Сбросить на Default (0.10)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Радиус"
                                       ToolTip="WrathRadius. Диапазон: 0..3000. Default: 350."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="WrathRadiusBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathRadius" ToolTip="Сбросить на Default (350)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Смещение по Z"
                                       ToolTip="WrathZOffset. Диапазон: -500..500. Default: 100."/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="WrathZOffsetBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathZOffset" ToolTip="Сбросить на Default (100)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <Expander Header="УРОН И РЕСУРСЫ" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Мин. урон"
                                       ToolTip="WrathDamageMin. Диапазон: 0..999. Default: 35."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="WrathDamageMinBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathDamageMin" ToolTip="Сбросить на Default (35)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Макс. урон"
                                       ToolTip="WrathDamageMax. Диапазон: 0..999. Default: 70."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="WrathDamageMaxBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathDamageMax" ToolTip="Сбросить на Default (70)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Множитель огня"
                                       ToolTip="WrathFireMult. Диапазон: 0..10. Default: 1.0."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="WrathFireMultBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathFireMult" ToolTip="Сбросить на Default (1.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Магия шторма"
                                       ToolTip="WrathStormMag. Диапазон: 0..1000. Default: 100."/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="WrathStormMagBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathStormMag" ToolTip="Сбросить на Default (100)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Стамина мороза"
                                       ToolTip="WrathFrostSta. Диапазон: 0..1000. Default: 50."/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="WrathFrostStaBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathFrostSta" ToolTip="Сбросить на Default (50)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Скалирование по уровню"
                                       ToolTip="WrathLevelScale. Диапазон: 0..5. Default: 0.5."/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="WrathLevelScaleBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="5" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathLevelScale" ToolTip="Сбросить на Default (0.5)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Кап уровня"
                                       ToolTip="WrathLevelCap. Диапазон: 1..999. Default: 30."/>
                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="WrathLevelCapBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="6" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathLevelCap" ToolTip="Сбросить на Default (30)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <Expander Header="ТРЯСКА КАМЕРЫ" IsExpanded="True">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Шанс тряски"
                                       ToolTip="WrathShakeChance. Диапазон: 0..1. Default: 0.25."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="WrathShakeChanceBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathShakeChance" ToolTip="Сбросить на Default (0.25)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Сила тряски"
                                       ToolTip="WrathShakeStrength. Диапазон: 0..15. Default: 2.0."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="WrathShakeStrengthBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathShakeStrength" ToolTip="Сбросить на Default (2.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Длительность тряски"
                                       ToolTip="WrathShakeDuration. Диапазон: 0..30. Default: 0.35."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="WrathShakeDurationBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="WrathShakeDuration" ToolTip="Сбросить на Default (0.35)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
