<UserControl x:Class="TDL.Configurator.App.Pages.InventoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="NumericBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Content" Value="↺"/>
        </Style>

        <Style x:Key="RowLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <TextBlock Text="Inventory" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Настройки секции [Inventory] в TDL_StreamPlugin.ini"
                       Opacity="0.7" Margin="0,6,0,16"/>

            <WrapPanel Margin="0,0,0,12" VerticalAlignment="Center">
                <Button Content="Загрузить" Width="120" Margin="0,0,8,0" Click="Load_Click"/>
                <Button Content="Сохранить" Width="120" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Сбросить всё" Width="130" Margin="0,0,12,0" Click="DefaultsAll_Click"/>
                <TextBlock x:Name="InventoryStatusText" Opacity="0.7" VerticalAlignment="Center"/>
            </WrapPanel>

            <GroupBox Header="Параметры">
                <StackPanel Margin="10">

                    <Expander Header="ДОЖДЬ ПРЕДМЕТОВ" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Точное количество (0 — рандом)"
                                       ToolTip="Если 0 — используется Min/Max. Если >0 — выбрасывается ровно это число."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="ScatterExactCountBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ScatterExactCount" ToolTip="Default" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Минимум предметов"
                                       ToolTip="Минимум предметов (когда точное количество = 0)."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="ScatterMinCountBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ScatterMinCount" ToolTip="Default" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Максимум предметов"
                                       ToolTip="Максимум предметов (когда точное количество = 0)."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="ScatterMaxCountBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ScatterMaxCount" ToolTip="Default" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Радиус разброса"
                                       ToolTip="Радиус (в игровых единицах), в котором разлетаются предметы."/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="ScatterRadiusBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ScatterRadius" ToolTip="Default" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <Expander Header="РАЗДЕТЬ" IsExpanded="True">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Размер пачки"
                                       ToolTip="Сколько предметов выбрасывать за один цикл."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="DropBatchSizeBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="DropBatchSize" ToolTip="Default" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Пауза между выбросами"
                                       ToolTip="Задержка (сек) между циклами выбрасывания."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="DropIntervalBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="DropInterval" ToolTip="Default" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Таймаут (сек)"
                                       ToolTip="Ограничение по времени на операцию (сек)."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="DropTimeoutBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="DropTimeout" ToolTip="Default" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Защитить важное"
                                       ToolTip="1/0. Если включено — важные токены/предметы не будут выброшены."/>
                            <CheckBox Grid.Row="3" Grid.Column="1" x:Name="ProtectTokensByNameCheck"
                                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ProtectTokensByName" ToolTip="Default" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Показывать процесс"
                                       ToolTip="1/0. Если включено — показывать прогресс/уведомления."/>
                            <CheckBox Grid.Row="4" Grid.Column="1" x:Name="DropShowProgressCheck"
                                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="DropShowProgress" ToolTip="Default" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
