<UserControl x:Class="TDL.Configurator.App.Pages.ComedyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="NumericBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>

        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Content" Value="↺"/>
        </Style>

        <Style x:Key="RowLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <TextBlock Text="Comedy" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Настройки секции [Comedy] в TDL_StreamPlugin.ini"
                       Opacity="0.7" Margin="0,6,0,16"/>

            <WrapPanel Margin="0,0,0,12" VerticalAlignment="Center">
                <Button Content="Сохранить + применить" Width="170" Margin="0,0,8,0" Click="SaveApply_Click"/>
                <Button Content="Сбросить всё" Width="130" Margin="0,0,12,0" Click="DefaultsAll_Click"/>
                <TextBlock x:Name="StatusText" Opacity="0.7" VerticalAlignment="Center"/>
            </WrapPanel>

            <GroupBox Header="Параметры">
                <StackPanel Margin="10">

                    <!-- FAKE HERO -->
                    <Expander Header="ЛОЖНЫЙ ГЕРОЙ" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Длительность (сек)"
                                       ToolTip="Сколько секунд длится эффект."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="FakeHeroDurationBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FakeHeroDuration" ToolTip="Сбросить на Default (120)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Частота действий (сек)"
                                       ToolTip="Пауза (сек) между действиями героя."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="FakeHeroActionIntervalBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FakeHeroActionInterval" ToolTip="Сбросить на Default (3.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Множитель урона"
                                       ToolTip="Множитель урона героя."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="FakeHeroDamageMultBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FakeHeroDamageMult" ToolTip="Сбросить на Default (1.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Style="{StaticResource RowLabelStyle}"
                                       Text="Сила толчка">
                                <TextBlock.ToolTip>
                                    <ToolTip MaxWidth="420">
                                        <TextBlock TextWrapping="Wrap">
                                            <Run Text="Сила отбрасывания/толчка. "/>
                                            <Run Text="ВНИМАНИЕ!" Foreground="Red" FontWeight="Bold"/>
                                            <Run Text=" Установка большого значения может привести к полету через всю карту и попаданию в текстуру."
                                                 Foreground="Red"/>
                                        </TextBlock>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="FakeHeroPushForceBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FakeHeroPushForce" ToolTip="Сбросить на Default (5)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Вероятность толчка (%)"
                                       ToolTip="Шанс (0–100) выполнить толчок/крик."/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="FakeHeroShoutChanceBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FakeHeroShoutChance" ToolTip="Сбросить на Default (30)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Вероятность заклинания (%)"
                                       ToolTip="Шанс (0–100) использовать заклинание."/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="FakeHeroSpellChanceBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="5" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="FakeHeroSpellChance" ToolTip="Сбросить на Default (30)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <!-- HORROR -->
                    <Expander Header="ХОРРОР МОД" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Длительность кошмара (сек)"
                                       ToolTip="Сколько секунд длится охота/кошмар."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="HorrorDurationBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="HorrorDuration" ToolTip="Сбросить на Default (120)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Дистанция появления"
                                       ToolTip="Расстояние появления охотника от игрока (в игровых единицах)."/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="HorrorSpawnBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="HorrorSpawn" ToolTip="Сбросить на Default (800)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Дистанция телепорта"
                                       ToolTip="На каком расстоянии охотник может телепортироваться к игроку (units)."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="HorrorTeleportBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="HorrorTeleport" ToolTip="Сбросить на Default (600)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Предел преследования"
                                       ToolTip="Максимальная дистанция преследования (units)."/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="HorrorMaxDistBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="HorrorMaxDist" ToolTip="Сбросить на Default (3000)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Живучесть охотника"
                                       ToolTip="Запас здоровья охотника."/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="HorrorHealthBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="HorrorHealth" ToolTip="Сбросить на Default (300)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <!-- ARENA -->
                    <Expander Header="ВОЛНА ВРАГОВ" IsExpanded="True" Margin="0,0,0,12">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Количество волн"
                                       ToolTip="Сколько волн врагов будет создано."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="ArenaWavesBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ArenaWaves" ToolTip="Сбросить на Default (3)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RowLabelStyle}" Text="Врагов в волне">
                                <TextBlock.ToolTip>
                                    <ToolTip MaxWidth="420">
                                        <TextBlock TextWrapping="Wrap">
                                            <Run Text="Сколько врагов появляется в одной волне. "/>
                                            <Run Text="ВНИМАНИЕ!" Foreground="Red" FontWeight="Bold"/>
                                            <Run Text=" Установка большого значения может привести к падения FPS и вылетам игры" Foreground="Red"/>
                                        </TextBlock>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="ArenaPerWaveBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ArenaPerWave" ToolTip="Сбросить на Default (3)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Пауза между волнами (сек)"
                                       ToolTip="Задержка (сек) между волнами."/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="ArenaIntervalBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ArenaInterval" ToolTip="Сбросить на Default (3.0)" Click="DefaultRow_Click"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Размер арены"
                                       ToolTip="Радиус арены/спавна вокруг игрока (units)."/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="ArenaRadiusBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="ArenaRadius" ToolTip="Сбросить на Default (800)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                    <!-- ESCORT -->
                    <Expander Header="СОПРОВОЖДЕНИЕ" IsExpanded="True">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RowLabelStyle}"
                                       Text="Время сопровождения (сек)"
                                       ToolTip="Сколько секунд длится режим сопровождения."/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="EscortDurationBox"
                                     Style="{StaticResource NumericBoxStyle}"/>
                            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ResetButtonStyle}"
                                    Tag="EscortDuration" ToolTip="Сбросить на Default (120)" Click="DefaultRow_Click"/>
                        </Grid>
                    </Expander>

                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
