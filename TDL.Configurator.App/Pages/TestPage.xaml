<UserControl x:Class="TDL.Configurator.App.Pages.TestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="Test" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Запуск команд через tdl_send.exe" Opacity="0.7" Margin="0,6,0,16"/>

            <!-- NORMAL source -->
            <WrapPanel Margin="0,0,0,12" VerticalAlignment="Center">
                <TextBlock Text="SOURCE:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="SourceBox" Width="160" SelectedIndex="1">
                    <ComboBoxItem Content="1 — beats"/>
                    <ComboBoxItem Content="2 — points"/>
                    <ComboBoxItem Content="3 — vote"/>
                </ComboBox>
            </WrapPanel>

            <!-- FORCE params -->
            <WrapPanel Margin="0,0,0,16" VerticalAlignment="Center">
                <TextBlock Text="FORCE:" VerticalAlignment="Center" Margin="0,0,8,0"/>

                <TextBlock Text="COUNT" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="ForceCountBox"
                         Width="70" Height="26"
                         Text="1"
                         VerticalContentAlignment="Center"
                         TextAlignment="Center"
                         Padding="6,0"
                         Margin="0,0,12,0"/>

                <TextBlock Text="INTERVAL" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="ForceIntervalBox"
                         Width="90" Height="26"
                         VerticalContentAlignment="Center"
                         TextAlignment="Center"
                         Padding="6,0"
                         Margin="0,0,12,0"
                         ToolTip="Опционально. Если пусто — берётся default из TDL_Cooldowns.ini"/>

                <TextBlock Text="(для Scatter max COUNT=10)" Opacity="0.7" VerticalAlignment="Center"/>
            </WrapPanel>

            <!-- Connectivity -->
            <GroupBox Header="Connectivity" Margin="0,0,0,12">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center" Text="SYSTEM_PING" />

                    <Button Grid.Column="1" Width="90" Margin="8,0,0,0" Content="NORMAL" Click="PingNormal_Click"/>
                    <Button Grid.Column="2" Width="90" Margin="8,0,0,0" Content="FORCE1" IsEnabled="False"/>
                    <Button Grid.Column="3" Width="90" Margin="8,0,0,0" Content="FORCE" IsEnabled="False"/>
                </Grid>
            </GroupBox>

            <!-- System -->
            <GroupBox Header="System" Margin="0,0,0,12">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center" Text="SYSTEM_HEALING" />

                    <Button Grid.Column="1" Width="90" Margin="8,0,0,0" Content="NORMAL" Click="HealingNormal_Click"/>
                    <Button Grid.Column="2" Width="90" Margin="8,0,0,0" Content="FORCE1" Click="HealingForce1_Click"/>
                    <Button Grid.Column="3" Width="90" Margin="8,0,0,0" Content="FORCE" IsEnabled="False"/>
                </Grid>
            </GroupBox>

            <!-- Inventory -->
            <GroupBox Header="Inventory" Margin="0,0,0,12">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center" Text="INVENTORY_SCATTER" />

                    <Button Grid.Column="1" Width="90" Margin="8,0,0,0" Content="NORMAL" Click="ScatterNormal_Click"/>
                    <Button Grid.Column="2" Width="90" Margin="8,0,0,0" Content="FORCE1" IsEnabled="False"/>
                    <Button Grid.Column="3" Width="90" Margin="8,0,0,0" Content="FORCE" Click="ScatterForce_Click"/>
                </Grid>
            </GroupBox>

            <!-- Output -->
            <GroupBox Header="Результат">
                <TextBox x:Name="OutputBox"
                         Margin="10"
                         Height="260"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
